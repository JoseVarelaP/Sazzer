<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/bg_gradientcolor">

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/password_message"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@color/colorBG"/>

    <EditText
        android:id="@+id/user_password2"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:autofillHints="true"
        android:hint="@string/hint_password2"
        android:inputType="textPassword"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorBG"
        android:textColorHint="@color/colorBG"
        android:backgroundTint="@color/colorBG"/>

    <Button
        android:id="@+id/btn_next2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="@string/next_btn"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorBG"
        android:fontFamily="sans-serif-medium"/>

</LinearLayout>